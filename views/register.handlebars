<div class='registersection modal' id='loginModal'>
  <div class='registerSection'>
    <div class='row'>
      <div class='col s6'>
        <h2 class='page-header'>Register</h2>
      </div>
    </div>
    {{#if errors}}
          {{#each errors}}
            <div class='alert alert-danger'>{{msg}}</div>
          {{/each}}
    {{/if}}
    <form method='post' action='/users/register'>
        <div class='row'>
          <div class='input-field col s6'>
            <i class='material-icons prefix'>assignment_ind</i>
            <label class='active' for='name'>NAME</label>
            <input id='name' type='text' class='form-control' name='name'>
          </div>
        </div>
        <div class='row'>
          <div class='input-field col s6'>
            <i class='material-icons prefix'>account_circle</i>
            <label class='active' for='username'>USERNAME</label>
            <input id='username' type='text' class='form-control' name='username'>
          </div>
        </div>
        <div class='row'>
          <div class='input-field col s6'>
            <i class='material-icons prefix'>email</i>
            <label class='active' for='email'>EMAIL</label>
            <input id='email' type='email' class='form-control' name='email'>
          </div>
        </div>
        <div class='row'>
          <div class='input-field col s6'>
            <i class='material-icons prefix'>lock</i>
            <label class='active' for='password'>PASSWORD</label>
            <input id='password' type='password' class='form-control' name='password'>
          </div>
        </div>
        <div class='row'>
          <div class='input-field col s6'>
            <i class='material-icons prefix'>enhanced_encryption</i>
            <label class='active' for='password2'>CONFIRM PASSWORD</label>
            <input id='password2' type='password' class='form-control' name='password2'>
          </div>
        </div>
        <div class='modal-footer'>
          <p><a href='/users/login'>LOGIN</a></p>
          <button id='registerBtn' type='submit' class='btn waves-effect waves-light cyan lighten-1'>Submit</button>
      </div>
    </form>
  </div>
</div>

<div class='footer'></div>
<div class='banner'></div>

<script src='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js'></script>

<script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js'></script>

<script>
    var elem = document.querySelector('.modal');
    var instance = M.Modal.init(elem);

    instance.open()

    document.getElementById("registerBtn").addEventListener("submit", function() {
    instance.close()
    });
</script>

 



  